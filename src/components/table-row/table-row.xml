<view class="table-row tr bg-w" wx:if="{{props.isHeader}}">
    <block wx:for="{{props.row.cols}}">
        <view class="th">{{item.v}}</view>
    </block>
</view>
<view class="table-row tr {{props.isDark ? 'bg-g' : ''}}" wx:else>
    <block wx:for="{{props.row.cols}}">
        <view class="td">{{item.v}}</view>
    </block>
</view>

